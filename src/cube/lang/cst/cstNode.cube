use cube.lang.keyword
use cube.lang.tokenizer.symbol

define abstract cstNode
  function create(nodeType as cstNodeType) = me.nodeType = nodeType
  function nodeType as cstNodeType = nodeType
  function isSymbol(s as symbol) = false
  function isKeyword(k as keyword) = false

  function toString as string
    var s = new stringBuilder
    write(s)
    output s.toString
  end

  protected
    var nodeType as cstNodeType

    abstract
      function write(s as stringBuilder)
    end
  end
end