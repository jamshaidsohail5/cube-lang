use cube.lang
use cube.lang.tokenizer

define syntaxError as runtimeException
  shared
    function expected(s as symbol, t as token) =
      new syntaxException("Expected '" + s.text + "' not " + t.nodeType + '.')

    function expected(k as keyword, t as token) =
      new syntaxException("Expected '" + k.text + "' not " + t.nodeType + '.')

    function near(t as token) = new syntaxException("Syntax error near '" + t + "'.")
  end
end