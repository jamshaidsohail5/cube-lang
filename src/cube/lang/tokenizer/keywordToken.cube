use cube.lang
use cube.lang.syntax

define keywordToken as token
  function create(keyword as keyword, text as string)
    super(NodeType.Keyword, text)
    me.keyword = keyword
  end

  function key as keyword = keyword
  function isKeyword(k as keyword) = k == keyword

  function write(s as stringBuilder)
    s.append(nodeType.displayName)
    s.append(char('('))
    s.append(keyword.name)
    s.append(char(')'))
  end

  internal
    var keyword as keyword
  end
end