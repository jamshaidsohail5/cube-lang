use cube.lang
use cube.lang.operatorType

define unaryExpression as element
  function create(operator as operator, operand as element)
    me.operator = operator
    me.operand = operand
  end

  function write(s as stringBuilder) =
    if operator.operatorType = UnaryPrefix then do
      s.append('(').append(operator.symbol.text)
      operand.write(s)
      s.append(')')
    end
    else do
      s.append('(')
      operand.write(s)
      s.append(operator.symbol.text).append(')')
    end

  internal
    var operator as operator
    var operand as element
  end
end